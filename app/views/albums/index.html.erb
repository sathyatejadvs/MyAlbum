<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td class="glyphicon glyphicon-folder-open"><%= link_to 'Show', album %></td>
        <td class="glyphicon glyphicon-pencil"><%= link_to 'Edit', edit_album_path(album) %></td>
        <td class="glyphicon glyphicon-trash"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

